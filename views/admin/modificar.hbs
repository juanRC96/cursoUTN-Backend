<div class="contenedor">
  <h2>MODIFICAR NOTICIA</h2>
  <form action="/admin/noticias/modificar" method="post">
  <input type="hidden" value="{{noticia.id}}" name="id">
    <div class="form-group">
        <input type="text" placeholder="Titulo" name="titulo" value="{{noticia.titulo}}">
    </div>

    <div class="form-group">
        <input type="text" placeholder="Subtitulo" name="subtitulo" value="{{noticia.subtitulo}}">
    </div>

    <div class="form-group">
        <textarea type="text" placeholder="Cuerpo" name="cuerpo">{{noticia.cuerpo}}</textarea>
    </div>

    <div class="form-group">
        <p>
            <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
        </p>
        <p>
            <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
            <input type="hidden" name="img_original" value="{{noticia.img_id}}">
        </p>
    </div>

    <button type="submit">Modificar</button>
   </form>
      {{#if error}}
   <p>{{message}}</p>
   {{/if}}
</div>