<div class="contenedor">
  <h2>AGREGAR NOTICIA</h2>
  <form action="/admin/noticias/agregar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="text" placeholder="Titulo" name="titulo">
    </div>

    <div class="form-group">
        <input type="text" placeholder="Subtitulo" name="subtitulo">
    </div>

    <div class="form-group">
        <textarea type="text" placeholder="Cuerpo" name="cuerpo"></textarea>
    </div>

    <div class="form-group">
        <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
    </div>

    <button type="submit">Guardar</button>
   </form>
   {{#if error}}
   <p>{{message}}</p>
   {{/if}}
</div>